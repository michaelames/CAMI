
<div class="trials-search">
    <label for="institution">Institution</label>
        <div class="dropdown-padding" id="institutionDiv">
            <select class="trials-dropdown" id="institution" data-native-menu="true" style="visibility: visible !important; overflow-x: visible; position: relative; z-index: 999; display: inline;">
            </select>
        </div>
    <label for="diseaseSite" class="trials-margin">Disease Site</label>
        <div class="dropdown-padding" id="diseaseSiteDiv">
            <select class="trials-dropdown" id="diseaseSite" data-native-menu="true" style="visibility: visible !important; overflow-x: visible; position: relative; z-index: 999; display: inline;">
            </select>
        </div>
    <label for="phase" class="trials-margin">Phase</label>
        <div class="dropdown-padding" id="phaseDiv">
            <select class="trials-dropdown" id="phase" data-native-menu="true" style="visibility: visible !important; overflow-x: visible; position: relative; z-index: 999; display: inline;">
            </select>
        </div>
    <label for="coopGroup" class="trials-margin">Cooperative Group</label>
        <div class="dropdown-padding" id="coopGroupDiv">
            <select class="trials-dropdown" id="coopGroup" data-native-menu="true" style="visibility: visible !important; overflow-x: visible; position: relative; z-index: 999; display: inline;">
            </select>
        </div>
    <label for="biomarker" class="trials-margin">Biomarker Study?</label>  
        <div class="dropdown-padding">
            <div class="switch" id="biomarker">
                <span class="thumb"></span>
                <input type="checkbox" id="biomarker-checkbox" name="bioMarker" />
            </div>
        </div>
    <div class="search-btn-align">
        <a class="search-btn-b ui-corner-all trials-margin" onclick="searchTrials()">
            Search
        </a>
    </div>
</div>
